<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="5dp"
    android:layout_margin="15dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Title"
        android:id="@+id/tvEventTitle"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgEventThumb"
        android:layout_toEndOf="@+id/imgEventThumb"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Date"
        android:id="@+id/tvEventSpaceTimeInfo"
        android:layout_below="@+id/tvEventDescription"
        android:layout_alignLeft="@+id/tvEventTitle"
        android:layout_alignStart="@+id/tvEventTitle"
        android:layout_marginTop="5dp" />

    <ImageView
        android:id="@+id/imgEventThumb"
        android:layout_height="80dp"
        android:layout_width="100dp"
        android:src="@drawable/nothumb"
        android:layout_alignTop="@+id/tvEventTitle"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Price"
        android:id="@+id/tvEventPrice"
        android:layout_below="@+id/tvEventSpaceTimeInfo"
        android:layout_alignLeft="@+id/tvEventTitle"
        android:layout_marginTop="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Description"
        android:id="@+id/tvEventDescription"
        android:layout_below="@+id/tvEventTitle"
        android:layout_alignLeft="@+id/tvEventTitle"
        android:layout_marginTop="2dp" />
</RelativeLayout>